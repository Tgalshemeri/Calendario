<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:text="Title"
    android:id="@+id/textTitle"/>
    <ImageView android:layout_height="30dp" android:layout_width="30dp"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignLeft="@+id/textTime"
               android:src="@drawable/baseline_close_black_18"
            android:background="?android:attr/selectableItemBackground"
            android:layout_alignParentRight="true"
               android:id="@+id/delBtn"
            android:layout_marginLeft="-51dp" android:layout_marginRight="51dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:text="Time"
              android:id="@+id/textTime"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>